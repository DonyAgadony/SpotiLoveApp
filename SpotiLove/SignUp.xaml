<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotiLove.SignUp"
             BackgroundColor="#121212">
    <ScrollView>
        <VerticalStackLayout
            Margin="0,50,0,0"
            Padding="30,20"
            Spacing="30">

            <!-- Header Section with Navigation -->
            <FlexLayout Direction="Row"
                        JustifyContent="SpaceBetween"
                        AlignItems="Center"
                        Margin="0,0,0,20">
                <Button
                    Text="â† Back"
                    FontSize="16"
                    TextColor="#b3b3b3"
                    BackgroundColor="Transparent"
                    BorderWidth="0"
                    Clicked="OnBackClicked"/>

                <Label
                    Text="SpotiLove"
                    FontSize="24"
                    FontAttributes="Bold"
                    TextColor="#1db954"
                    HorizontalOptions="Center"/>

                <Label Text="" Width="60"/>
            </FlexLayout>

            <!-- Tab Navigation -->
            <FlexLayout Direction="Row"
                        JustifyContent="Center"
                        AlignItems="Center"
                        Margin="0,0,0,30">
                <Frame
                    BackgroundColor="#1db954"
                    Padding="15,10"
                    CornerRadius="20"
                    BorderColor="Transparent"
                    Margin="5,0"
                    HasShadow="False">
                    <Label
                        Text="Sign Up"
                        FontSize="18"
                        FontAttributes="Bold"
                        TextColor="#121212"
                        HorizontalOptions="Center"/>
                </Frame>

                <Border
                    BackgroundColor="Transparent"
                    Padding="15,10"
                    StrokeShape="RoundRectangle 20"
                    Stroke="#535353"
                    StrokeThickness="1"
                    Margin="5,0">
                    <Label
                        Text="Login"
                        FontSize="18"
                        TextColor="#b3b3b3"
                        HorizontalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnGoToLogin" />
                        </Label.GestureRecognizers>
                    </Label>
                </Border>
            </FlexLayout>

            <!-- Welcome Message -->
            <VerticalStackLayout Spacing="10" Margin="0,0,0,20">
                <Label
                    Text="Create Your Account"
                    FontSize="28"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalOptions="Center"/>
                <Label
                    Text="Join SpotiLove to discover music with friends"
                    FontSize="16"
                    TextColor="#b3b3b3"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <!-- Form Fields -->
            <VerticalStackLayout Spacing="20">
                <!-- Name Field -->
                <Border
                    BackgroundColor="#212121"
                    Stroke="#535353"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 8"
                    Padding="0">
                    <Entry
                        x:Name="NameEntry"
                        Placeholder="Full name"
                        PlaceholderColor="#b3b3b3"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Margin="15,5"/>
                </Border>

                <!-- Email Field -->
                <Border
                    BackgroundColor="#212121"
                    Stroke="#535353"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 8"
                    Padding="0">
                    <Entry
                        x:Name="EmailEntry"
                        Placeholder="Email address"
                        PlaceholderColor="#b3b3b3"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Keyboard="Email"
                        Margin="15,5"/>
                </Border>

                <!-- Age Field -->
                <Border
                    BackgroundColor="#212121"
                    Stroke="#535353"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 8"
                    Padding="0">
                    <Entry
                        x:Name="AgeEntry"
                        Placeholder="Age"
                        PlaceholderColor="#b3b3b3"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Keyboard="Numeric"
                        Margin="15,5"/>
                </Border>

                <!-- Gender Picker -->
                <Border
                    BackgroundColor="#212121"
                    Stroke="#535353"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 8"
                    Padding="0">
                    <Picker
                        x:Name="GenderPicker"
                        Title="Select Gender"
                        TitleColor="#b3b3b3"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        Margin="10,5">
                        <Picker.Items>
                            <x:String>Male</x:String>
                            <x:String>Female</x:String>
                            <x:String>Non-binary</x:String>
                            <x:String>Other</x:String>
                            <x:String>Prefer not to say</x:String>
                        </Picker.Items>
                    </Picker>
                </Border>

                <!-- Sexual Orientation Picker -->
                <VerticalStackLayout Spacing="5">
                    <Label
                        Text="Sexual Orientation"
                        FontSize="14"
                        TextColor="#b3b3b3"/>
                    <Border
                        BackgroundColor="#212121"
                        Stroke="#535353"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        Padding="0">
                        <Picker
                            x:Name="SexualOrientationPicker"
                            Title="Select Orientation"
                            TitleColor="#b3b3b3"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            Margin="10,5">
                            <Picker.Items>
                                <x:String>Female</x:String>
                                <x:String>Male</x:String>
                                <x:String>Both</x:String>
                            </Picker.Items>
                        </Picker>
                    </Border>
                    <Label
                        Text="Who are you attracted to?"
                        FontSize="12"
                        TextColor="#888888"
                        HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <!-- Bio Field (NEW) -->
                <VerticalStackLayout Spacing="5">
                    <Label
                        Text="About You"
                        FontSize="14"
                        TextColor="#b3b3b3"/>
                    <Border
                        BackgroundColor="#212121"
                        Stroke="#535353"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 8"
                        Padding="0">
                        <Editor
                            x:Name="BioEditor"
                            Placeholder="Tell us a bit about yourself... (optional)"
                            PlaceholderColor="#b3b3b3"
                            TextColor="White"
                            BackgroundColor="Transparent"
                            HeightRequest="100"
                            MaxLength="500"
                            Margin="15,10"
                            AutoSize="TextChanges"/>
                    </Border>
                    <Label
                        x:Name="BioCharCountLabel"
                        Text="0/500 characters"
                        FontSize="10"
                        TextColor="#888888"
                        HorizontalOptions="End"
                        Margin="0,-5,0,0"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Password Field -->
            <Border
                    BackgroundColor="#212121"
                    Stroke="#535353"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 8"
                    Padding="0">
                <Entry
                        x:Name="PasswordEntry"
                        Placeholder="Password (min. 6 characters)"
                        PlaceholderColor="#b3b3b3"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        IsPassword="True"
                        Margin="15,5"/>
            </Border>

            <!-- Confirm Password Field -->
            <Border
                    BackgroundColor="#212121"
                    Stroke="#535353"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 8"
                    Padding="0">
                <Entry
                        x:Name="ConfirmPasswordEntry"
                        Placeholder="Confirm password"
                        PlaceholderColor="#b3b3b3"
                        TextColor="White"
                        BackgroundColor="Transparent"
                        IsPassword="True"
                        Margin="15,5"/>
            </Border>

            <!-- Profile Image Picker -->
            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                <Frame WidthRequest="120" HeightRequest="120" CornerRadius="60"
                       BackgroundColor="#1db954" HasShadow="False">
                    <Image x:Name="ProfileImagePreview"
                           Aspect="AspectFill"
                           WidthRequest="120"
                           HeightRequest="120"/>
                </Frame>
                <Button Text="Choose Profile Picture"
                        BackgroundColor="#1db954"
                        TextColor="Black"
                        Clicked="OnPickImageClicked"
                        CornerRadius="20"/>
            </VerticalStackLayout>

            <!-- Terms and Conditions -->
            <FlexLayout Direction="Row"
                        AlignItems="Start"
                        Margin="0,10,0,0">
                <CheckBox
                    x:Name="TermsCheckBox"
                    Color="#1db954"
                    Margin="0,0,10,0"/>
                <Label
                    TextColor="#b3b3b3"
                    FlexLayout.Grow="1">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="I agree to the " FontSize="14"/>
                            <Span Text="Terms of Service" 
                                  FontSize="14" 
                                  TextColor="#1db954"
                                  TextDecorations="Underline">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnTermsClicked"/>
                                </Span.GestureRecognizers>
                            </Span>
                            <Span Text=" and " FontSize="14"/>
                            <Span Text="Privacy Policy" 
                                  FontSize="14" 
                                  TextColor="#1db954"
                                  TextDecorations="Underline">
                                <Span.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnPrivacyClicked"/>
                                </Span.GestureRecognizers>
                            </Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </FlexLayout>

            <!-- Sign Up Button -->
            <Button
                Text="Create Account"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="#121212"
                BackgroundColor="#1db954"
                CornerRadius="25"
                HeightRequest="50"
                Margin="0,20,0,0"
                Clicked="OnCreateAccount"/>

            <!-- Divider -->
            <FlexLayout Direction="Row"
                        AlignItems="Center"
                        Margin="0,20,0,10">
                <BoxView
                    BackgroundColor="#535353"
                    HeightRequest="1"
                    FlexLayout.Grow="1"/>
                <Label
                    Text="  or sign up with  "
                    TextColor="#b3b3b3"
                    FontSize="14"/>
                <BoxView
                    BackgroundColor="#535353"
                    HeightRequest="1"
                    FlexLayout.Grow="1"/>
            </FlexLayout>

            <!-- Social Login Buttons -->
            <VerticalStackLayout Spacing="15">
                <Button
                    Text="ðŸ” Continue with Google"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#212121"
                    CornerRadius="25"
                    HeightRequest="45"
                    Clicked="OnGoogleSignUp"/>

                <Button
                    Text="ðŸŽ Continue with Apple"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#212121"
                    CornerRadius="25"
                    HeightRequest="45"
                    Clicked="OnAppleSignUp"/>

                <Button
                    Text="â™ª Continue with Spotify"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#1db954"
                    CornerRadius="25"
                    HeightRequest="45"
                    Clicked="OnSpotifySignUp"/>
            </VerticalStackLayout>

            <!-- Footer -->
            <Label
                Text="Already have an account? Login"
                FontSize="14"
                TextColor="#1db954"
                HorizontalOptions="Center"
                Margin="0,30,0,20">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnGoToLogin" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>