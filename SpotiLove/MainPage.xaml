<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpotiLove.MainPage"
             BackgroundColor="#121212">

    <Grid RowDefinitions="Auto,*,Auto">
        <BoxView
            Grid.RowSpan="3"
            BackgroundColor="#1db954"
            Opacity="0.1"
            VerticalOptions="Start"
            HeightRequest="300" />

        <Grid Padding="20,20,20,10" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <HorizontalStackLayout Spacing="8" Grid.Column="0" VerticalOptions="Center">
                <Label
                    Text="SpotiLove"
                    FontSize="28"
                    FontAttributes="Bold"
                    TextColor="#1db954"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    LineBreakMode="NoWrap" />
                <Image
                    Source="spotilove_logo.png"
                    HeightRequest="30"
                    WidthRequest="30"
                    Aspect="AspectFit"
                    VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Button
                x:Name="DisconnectButton"
                Grid.Column="1"
                Text="Logout"
                Clicked="OnDisconnect"
                BackgroundColor="#dc3545"
                TextColor="White"
                FontSize="14"
                FontAttributes="Bold"
                CornerRadius="20"
                Padding="20,10"
                VerticalOptions="Center"
                HorizontalOptions="End" />
        </Grid>

        <ScrollView Grid.Row="1" Padding="20,0">
            <Grid VerticalOptions="Center">
                <Frame
                    BackgroundColor="#212121"
                    CornerRadius="20"
                    Padding="0"
                    HasShadow="True"
                    VerticalOptions="Center">
                    <VerticalStackLayout Spacing="0">

                        <FlexLayout Direction="Row"
                                    JustifyContent="SpaceBetween"
                                    AlignItems="Center"
                                    Padding="20,15,20,10">
                            <Label
                                Text="Discover New Music"
                                FontSize="16"
                                FontAttributes="Bold"
                                TextColor="White" />
                            <Label
                                Text="💫"
                                FontSize="18" />
                        </FlexLayout>

                        <Frame
                            BackgroundColor="#121212"
                            CornerRadius="15"
                            Padding="15"
                            Margin="15,0,15,0">
                            <VerticalStackLayout Spacing="12" HorizontalOptions="Center">

                                <Border
                                    StrokeShape="RoundRectangle 100"
                                    Stroke="#1db954"
                                    StrokeThickness="3"
                                    BackgroundColor="#535353"
                                    HeightRequest="160"
                                    WidthRequest="160"
                                    HorizontalOptions="Center">
                                    <Image
                                        x:Name="UserSuggestionImage"
                                        Source="images.png"
                                        Aspect="AspectFill"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center" />
                                </Border>

                                <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                                    <Label
                                        x:Name="NameLabel"
                                        Text="Alex Johnson, 24"
                                        FontSize="20"
                                        FontAttributes="Bold"
                                        TextColor="White"
                                        HorizontalOptions="Center" />

                                    <Label
                                        x:Name="LocationLabel"
                                        Text="2.3 km away"
                                        FontSize="12"
                                        TextColor="#b3b3b3"
                                        HorizontalOptions="Center" />

                                    <FlexLayout
                                        x:Name="GenreTagsContainer"
                                        Direction="Row"
                                        JustifyContent="Center"
                                        Wrap="Wrap"
                                        AlignItems="Center"
                                        Margin="0,8,0,0">
                                    </FlexLayout>

                                    <Border
                                        x:Name="BioContainer"
                                        StrokeShape="RoundRectangle 10"
                                        Stroke="#535353"
                                        StrokeThickness="1"
                                        BackgroundColor="#1a1a1a"
                                        Padding="12,10"
                                        Margin="0,10,0,0"
                                        MaximumWidthRequest="300">
                                        <VerticalStackLayout Spacing="4">
                                            <Label
                                                Text="About"
                                                FontSize="10"
                                                FontAttributes="Bold"
                                                TextColor="#1db954"
                                                HorizontalOptions="Start" />
                                            <Label
                                                x:Name="BioLabel"
                                                Text="Music lover and adventure seeker 🎵✨"
                                                FontSize="12"
                                                TextColor="#e0e0e0"
                                                LineBreakMode="WordWrap"
                                                MaxLines="3"
                                                HorizontalOptions="Center"
                                                HorizontalTextAlignment="Center" />
                                        </VerticalStackLayout>
                                    </Border>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                        <FlexLayout Direction="Row"
                                    JustifyContent="Center"
                                    AlignItems="Center"
                                    Padding="20,15,20,20"
                                    Wrap="NoWrap">

                            <Frame
                                BackgroundColor="#535353"
                                CornerRadius="30"
                                Padding="0"
                                HeightRequest="55"
                                WidthRequest="55"
                                Margin="15,0">
                                <Button
                                    x:Name="Dislike"
                                    Clicked="Dislike_Clicked"
                                    Text="✕"
                                    FontSize="22"
                                    TextColor="White"
                                    BackgroundColor="Transparent"
                                    CornerRadius="30" />
                            </Frame>

                            <Frame
                                BackgroundColor="#1db954"
                                CornerRadius="30"
                                Padding="0"
                                HeightRequest="55"
                                WidthRequest="55"
                                Margin="15,0">
                                <Button
                                    x:Name="LIKE"
                                    Clicked="LIKE_Clicked"
                                    Text="♥"
                                    FontSize="22"
                                    TextColor="White"
                                    BackgroundColor="Transparent"
                                    CornerRadius="30" />
                            </Frame>
                        </FlexLayout>
                    </VerticalStackLayout>
                    
                </Frame>
                <Border
    Grid.RowSpan="3"
    BackgroundColor="#1db954"
    StrokeThickness="0"
    HeightRequest="60"
    WidthRequest="60"
    HorizontalOptions="End"
    VerticalOptions="End"
    Margin="0,0,20,20"
    Padding="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="30"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                Offset="0,4"
                Radius="8"
                Opacity="0.3" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnChatButtonClicked" />
                    </Border.GestureRecognizers>

                    <Label
        Text="💬"
        FontSize="28"
        HorizontalOptions="Center"
        VerticalOptions="Center" />
                </Border>
            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>